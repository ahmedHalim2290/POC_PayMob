@{
}

@model POC_PayMob.Models.CallBackTransaction

@{
    ViewData["Title"] = "Transaction Details";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
@{
    if (Model.Success == "true")
    {
     
        <div class="container">
    <h2>Thanks for your order</h2>
    <h3>Details</h3>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Pending</th>
            <td>@Model.Pending</td>
        </tr>
        <tr>
            <th>Amount (Cents)</th>
            <td>@Model.AmountCents</td>
        </tr>
        <tr>
            <th>Success</th>
            <td>@Model.Success</td>
        </tr>
      
    
        <tr>
            <th>Order</th>
            <td>@Model.Order</td>
        </tr>
 
        <tr>
            <th>Currency</th>
            <td>@Model.Currency</td>
        </tr>
   
        <tr>
            <th>Owner</th>
            <td>@Model.Owner</td>
        </tr>
        <tr>
            <th>Data Message</th>
            <td>@Model.DataMessage</td>
        </tr>
       
       
        <tr>
            <th>Source Data Sub Type</th>
            <td>@Model.SourceDataSubType</td>
        </tr>
      
        <tr>
            <th>Txn Response Code</th>
            <td>@Model.TxnResponseCode</td>
        </tr>

    </table>
</div>
    }
    else
    {
            <div class="text-center">
                <h1 class="display-4">Sorry the process failed</h1>
                <p>
                    Details :  @Model.DataMessage
                </p>
            </div>
    }
}